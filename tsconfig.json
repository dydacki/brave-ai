{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "NodeNext",
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node"],
    "paths": {
      "@/*": ["src/*"],
    }
  },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "**/*.test.ts"],
}